{% extends 'base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="form">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{
                        form_row(form.content, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 10
                            }
                        })
                    }}
                </div>
                <div class="form-group">
                    {{ form_row(form.update) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}